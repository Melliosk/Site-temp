mixin nav-content()
  ul
    li: a(href="#about") About
    li: a(href="#note") Notes
    li: a(href="#contact") Contact
mixin contact()
  ul
    li Address
    li Phone
    li City     

.mobile-nav
  +nav-content()

header
  .header-position
    h1.logo pharmacy
    
    nav.site-nav
      +nav-content()
      
    .contact  
      +contact()
      
      a(href="#").email-link +email me
    
    .mobile-nav-toggle: span
